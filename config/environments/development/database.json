{
  "defaultConnection": "default",
  "connections": {
    "default": {
      "connector": "mongoose",
      "settings": {
        "client": "mongo",
        "host": "${process.env.DATABASE_HOST || '127.0.0.1'}",
        "port": "${process.env.DATABASE_PORT || 27017}",
        "database": "${process.env.DATABASE_NAME || 'cats'}",
        "username": "${process.env.DATABASE_USERNAME || 'admin1'}",
        "password": "${process.env.DATABASE_PASSWORD || '12345678a'}"
      },
      "options": {
        "authenticationDatabase":"${process.env.DATABASE_NAME || 'cats'}"
      }
    }
  }
}
